<h1>Add an Album</h1>

<% if flash[:errors] %>
<%= flash[:errors] %>
<% end %>

<form action="<%=  albums_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  
    
  <label>Band</label>
  <select name="album[band_id]">
    <option disabled >Select A Band</option>

    <% Band.all.each do |band| %>
    <option value="<%= band.id %>"<%= params[:band_id] = band.id ? "selected" : "" %> ><%= band.name %></option>
    <% end %>
  </select>
  
    
  <label>Title</label>
  <input type="text" name="album[title]">


  <label>Release Year</label>
  <input type="text" name="album[year]">
  
  <label>Type of Recording</label>
  <input type="radio" name="album[studio]">Studio
  <input type="radio" name="album[studio]">Live

  <br>
  <input type="submit" value="Submit">
  
  
  
</form>